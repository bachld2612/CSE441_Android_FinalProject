<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E3F2FD"
        android:padding="12dp">

        <!-- File -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvFileDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2251172282_BuiMinhDuc.pdf"
                android:autoLink="web"
                android:textColor="@color/link_blue"
                android:textStyle="italic"/>
        </LinearLayout>

        <!-- Ngày nộp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvDateSubmitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày nộp:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvDateSubmitDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="15/7/2025"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Lần nộp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvAttemptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lần nộp:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvAttemptDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Nhận xét của GVHD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCommentSupervisorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận xét của GVHD:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvCommentSupervisorDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Lý do chọn đề tài không hợp lý"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Nhận xét của GVPB -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCommentReviewerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận xét của GVPB:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvCommentReviewerDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Activity diagram chưa hợp lý"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvStatusDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Yêu cầu chỉnh sửa"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Thông báo header + link -->
        <LinearLayout
            android:id="@+id/layout_top_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F7FB"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_dieu_kien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đủ điều kiện thực hiện DATN học kỳ 2 năm học 2024-2025"
                android:textAlignment="center"
                android:textColor="#444"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dang_ky_de_tai"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký thực hiện đề tài"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_de_nghi_hoan"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Đề nghị hoãn đồ án" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="0dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_thong_bao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#232323"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_xem_them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textColor="#177CFF"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Thanh màu xanh dưới header Thông báo -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="#2196F3"/>

        <!-- Danh sách thông báo (Fake, dùng LinearLayout thay cho ListView/RecyclerView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="16dp">

            <!-- Item 1: PDF -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/ic_pdf"
                    android:contentDescription="PDF"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="14dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30/12/2024 15:30"
                        android:textColor="#888888"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kế hoạch thu đồ án tốt nghiệp ngành kỹ thuật phần mềm"
                        android:textColor="#232323"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 2: Word -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/ic_word"
                    android:contentDescription="WORD"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="14dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15/10/2025 14:30"
                        android:textColor="#888888"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mẫu đề cương đồ án tốt nghiệp ngành CNTT"
                        android:textColor="#232323"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 3: Excel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/ic_excel"
                    android:contentDescription="EXCEL"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="14dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/09/2024 15:00"
                        android:textColor="#888888"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách phân công GVHD ngành hệ thống thông tin"
                        android:textColor="#232323"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Item 4: Excel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/ic_excel"
                    android:contentDescription="EXCEL"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="14dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/09/2024 14:30"
                        android:textColor="#888888"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách phân công GVHD ngành kỹ thuật phần mềm"
                        android:textColor="#232323"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ====== CONTENT: hiển thị khi có log ====== -->
        <LinearLayout
            android:id="@+id/groupContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#E7F3FF"
                app:cardCornerRadius="12dp"
                app:strokeColor="#B3D8FF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Dòng file: label + link -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="File:"
                            android:textStyle="bold"
                            android:textColor="#1e1e1e" />

                        <TextView
                            android:id="@+id/tvFileUrl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="—"
                            android:textColor="#1565C0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNgayNopGanNhat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ngày nộp: -" />

                    <TextView
                        android:id="@+id/tvTongSoLanNop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Số lần nộp: -" />

                    <!-- Container danh sách lý do -->
                    <LinearLayout
                        android:id="@+id/containerReasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ====== EMPTY: hiển thị khi chưa có đề cương ====== -->
        <LinearLayout
            android:id="@+id/groupEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="64dp"
            android:paddingBottom="64dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠"
                android:textColor="#9E9E9E"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:text="Bạn chưa có đề cương trong hệ thống. Nhấn vào “Nộp đề cương” để tiếp tục."
                android:textColor="#757575"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_top_state"
        android:orientation="vertical"
        android:background="#F5F7FB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_dieu_kien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Bạn đủ điều kiện thực hiện DATN học kỳ 2 năm học 2024-2025"
            android:textSize="14sp"
            android:textColor="#444" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_dang_ky_de_tai"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Đăng ký thực hiện đề tài"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_de_nghi_hoan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Đề nghị hoãn đồ án"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#2970F9"
        app:layout_constraintTop_toBottomOf="@id/layout_top_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Title -->

    <!-- Giao diện ĐÃ đăng ký -->
    <TextView
        android:id="@+id/tv_thong_tin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Thông tin đồ án"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top_state" />

    <LinearLayout
        android:id="@+id/layout_da_dang_ky"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E5F2FF"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_thong_tin_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_de_tai"
            android:text="Đề tài: Xây dựng hệ thống quản lý đồ án cho trường đại học Thủy Lợi"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/tv_gvhd"
            android:text="GVHD: ThS Kiều Tuấn Dũng"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/tv_tien_do"
            android:text="Tiến độ hiện tại: Sinh viên chủ động liên hệ với giáo viên hướng dẫn cùng hướng nghiên cứu đề tài"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_thoi_gian_thuc_hien"
                android:text="Thời gian thực hiện"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btn_thoi_gian"
                android:text=">>"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_thoi_gian_thuc_hien"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_nop_de_cuong"
                android:text="Nộp đề cương"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btn_nop_de_cuong"
                android:text=">>"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_nop_de_cuong"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_trang_thai"
            android:text="Trạng thái: Đã duyệt"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <!-- Giao diện CHƯA đăng ký -->
    <LinearLayout
        android:id="@+id/layout_chua_dang_ky"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_thong_tin_title"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_chua_dang_ky"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_warning"
            app:tint="#B1B3B7" />

        <TextView
            android:id="@+id/tv_chua_dang_ky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Bạn chưa đăng ký đồ án, vui lòng đăng ký!"
            android:textColor="#888"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

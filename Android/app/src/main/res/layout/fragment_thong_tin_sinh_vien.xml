<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- AppBar/Header -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/angle_left_solid_full"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hồ sơ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ic_done"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/check_solid_full"
            android:contentDescription="Done"/>
    </LinearLayout>

    <!-- Block chứa nền xanh, avatar và nút sửa -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_bg_block"
        android:layout_width="0dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#0286D4">

        <!-- Ảnh avatar tròn -->
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_panda"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_white"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nút sửa -->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:backgroundTint="#E4E4E4"
            android:text="Sửa"
            android:textColor="#111"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/img_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Dùng ScrollView cho danh sách info -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/profile_bg_block"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Các dòng thông tin sinh viên giống như bạn đã viết ở trên -->

            <!-- Dòng 1 -->
            <!-- Dòng 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="#F4F4F4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Họ và tên"
                    android:textColor="#222"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doãn Chí Bình"
                    android:textColor="#222"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/chevron_right_solid_full"/>
            </LinearLayout>
            <!-- Dòng 2 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Lớp" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="64KTPM4" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 3 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Mã sinh viên" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2251171234" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 4 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Giới tính" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nam" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 5 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Ngày sinh" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1/1/2004" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 6 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Số điện thoại" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0123456789" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 7 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="2dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Email" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2251171234@e.tlu.edu.vn" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
            <!-- Dòng 8 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="44dp" android:orientation="horizontal" android:gravity="center_vertical" android:background="#F4F4F4" android:paddingStart="12dp" android:paddingEnd="8dp" android:layout_marginBottom="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="GPA" android:textColor="#222" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4/4" android:textColor="#222" android:textSize="16sp"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chevron_right_solid_full" android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

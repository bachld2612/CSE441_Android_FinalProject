<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outline_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- AppBar với Toolbar + TabLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar chính -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Chi tiết hội đồng"
            app:titleTextColor="@color/black"
            android:elevation="4dp"/>

        <!-- TabLayout với 2 tab -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/blue"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/blue">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nộp đề cương"/>
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung: RecyclerView hiển thị danh sách đề cương -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOutlineList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
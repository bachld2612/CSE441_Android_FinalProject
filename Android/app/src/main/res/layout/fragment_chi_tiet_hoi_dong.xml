<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/committee_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Chi tiết hội đồng"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TÊN HỘI ĐỒNG -->
            <TextView
                android:id="@+id/tvCommitteeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hội đồng A"
                android:textStyle="bold"
                android:textColor="#232323"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- Card thông tin hội đồng -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:strokeColor="#D6EAF8"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Ngày bảo vệ -->
                    <LinearLayout
                        android:id="@+id/rowDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tvDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày bảo vệ:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>

                        <TextView
                            android:id="@+id/tvDateDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="15/08/2025–15/09/2025"
                            android:textColor="#232323"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp"/>
                    </LinearLayout>

                    <!-- Chủ tịch -->
                    <LinearLayout
                        android:id="@+id/rowChair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/tvChairLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chủ tịch hội đồng:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>
                        <TextView
                            android:id="@+id/tvChairDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="-"
                            android:textColor="#232323"/>
                    </LinearLayout>

                    <!-- Thư ký -->
                    <LinearLayout
                        android:id="@+id/rowSecretary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/tvSecretaryLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thư ký hội đồng:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>
                        <TextView
                            android:id="@+id/tvSecretaryDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="-"
                            android:textColor="#232323"/>
                    </LinearLayout>

                    <!-- PB 1 -->
                    <LinearLayout
                        android:id="@+id/rowPB1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/tvReviewer1Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảng viên PB 1:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>
                        <TextView
                            android:id="@+id/tvReviewer1Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="-"
                            android:textColor="#232323"/>
                    </LinearLayout>

                    <!-- PB 2 -->
                    <LinearLayout
                        android:id="@+id/rowPB2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/tvReviewer2Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảng viên PB 2:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>
                        <TextView
                            android:id="@+id/tvReviewer2Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="-"
                            android:textColor="#232323"/>
                    </LinearLayout>

                    <!-- PB 3 -->
                    <LinearLayout
                        android:id="@+id/rowPB3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView
                            android:id="@+id/tvReviewer3Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảng viên PB 3:"
                            android:textStyle="bold"
                            android:textColor="#232323"/>
                        <TextView
                            android:id="@+id/tvReviewer3Detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="-"
                            android:textColor="#232323"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Header Sinh viên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinh viên bảo vệ:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="8dp"/>

            <!-- List sinh viên -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#E3F2FD">

        <!-- Dòng 1: Họ tên | GVHD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Lý Duy Bách"
                android:textColor="#000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvSupervisorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GVHD:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvSupervisorDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Th.S Kiều Tuấn Dũng"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Dòng 2: MSV | Bộ môn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvMsvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSV:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvMsvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2251172245"
                android:textColor="#000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDeptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bộ môn:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvDeptDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Hệ thống thông tin"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Dòng 3: Lớp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvClassLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp:"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvClassDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="64KTPM4"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
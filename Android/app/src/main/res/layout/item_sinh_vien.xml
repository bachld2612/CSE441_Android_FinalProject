<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    android:backgroundTint="@color/student_card_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.54" />

        <!-- HÀNG 1 -->
        <TextView
            android:id="@+id/tv_label_msv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSV:"
            android:textStyle="bold"
            android:textColor="@color/text_strong"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_value_msv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="2251172245"
            android:textColor="@color/text_normal"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_msv"
            app:layout_constraintStart_toEndOf="@id/tv_label_msv"
            app:layout_constraintEnd_toStartOf="@id/gl_center"/>

        <TextView
            android:id="@+id/tv_label_ho_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên:"
            android:textStyle="bold"
            android:textColor="@color/text_strong"
            app:layout_constraintTop_toTopOf="@id/tv_label_msv"
            app:layout_constraintStart_toStartOf="@id/gl_center"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_value_ho_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Lý Duy Bách"
            android:textColor="@color/text_normal"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_ho_ten"
            app:layout_constraintStart_toEndOf="@id/tv_label_ho_ten"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- HÀNG 2 -->
        <TextView
            android:id="@+id/tv_label_lop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Lớp:"
            android:textStyle="bold"
            android:textColor="@color/text_strong"
            app:layout_constraintTop_toBottomOf="@id/tv_label_msv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_value_lop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="64KTPM4"
            android:textColor="@color/text_normal"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_lop"
            app:layout_constraintStart_toEndOf="@id/tv_label_lop"
            app:layout_constraintEnd_toStartOf="@id/gl_center"/>

        <TextView
            android:id="@+id/tv_label_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="SĐT:"
            android:textStyle="bold"
            android:textColor="@color/text_strong"
            app:layout_constraintTop_toBottomOf="@id/tv_label_ho_ten"
            app:layout_constraintStart_toStartOf="@id/gl_center"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_value_sdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="09xxxxxxxx"
            android:textColor="@color/text_normal"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_sdt"
            app:layout_constraintStart_toEndOf="@id/tv_label_sdt"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

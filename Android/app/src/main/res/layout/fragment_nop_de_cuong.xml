<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_lan_nop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lần nộp:"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_lan_nop_value"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="-"
            android:textSize="16sp"
            android:background="@drawable/bg_outlined_box"
            app:layout_constraintStart_toEndOf="@id/tv_lan_nop_label"
            app:layout_constraintTop_toTopOf="@id/tv_lan_nop_label"/>

        <TextView
            android:id="@+id/tv_file_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="File đề cương(URL):"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_lan_nop_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tv_picked_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            android:textColor="#616161"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_file_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_picked_file"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập URL(Link google drive)..."
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:enabled="false"
            android:text="Nộp đề cương"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/brand_457b9d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_url" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

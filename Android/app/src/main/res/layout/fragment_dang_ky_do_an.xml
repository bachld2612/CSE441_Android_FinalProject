<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/layout_form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_dang_ky_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký thực hiện đồ án"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:textSize="17sp"
                    android:layout_gravity="center" />

                <!-- Chọn GVHD -->
                <TextView
                    android:id="@+id/tv_chon_gvhd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn GVHD:"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_gvhd"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/act_gvhd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chọn giảng viên hướng dẫn"
                        android:inputType="text"
                        android:dropDownHeight="240dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nhập đề tài đăng ký -->
                <TextView
                    android:id="@+id/tv_de_tai_dang_ky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập đề tài đăng ký:"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/edt_ten_de_tai"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:hint="Tên đề tài"
                    android:background="@drawable/bg_edittext_outline"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp" />

                <!-- File tổng quan -->
                <TextView
                    android:id="@+id/tv_file_tong_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File tổng quan về đề tài:"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp" />

                <!-- Upload Box -->
                <FrameLayout
                    android:id="@+id/frame_upload_file"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_edittext_outline"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_upload"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_cloud_upload"
                            android:layout_gravity="center"
                            app:tint="#B1B3B7" />

                        <TextView
                            android:id="@+id/tv_keo_tha_tai_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chọn file để upload"
                            android:textColor="#B1B3B7"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Button gửi đăng ký -->
                <Button
                    android:id="@+id/btn_gui_dang_ky"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Gửi đăng ký"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#537198"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:elevation="2dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
